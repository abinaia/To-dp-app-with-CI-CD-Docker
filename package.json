{
  "name": "todo-app-devops",
  "version": "1.0.0",
  "description": "A simple To-Do List web app with CI/CD pipeline for DevOps demonstration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "docker:build": "docker build -t todo-app .",
    "docker:run": "docker run -p 3000:3000 todo-app",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "redis:start": "redis-server",
    "redis:cli": "redis-cli"
  },
  "keywords": [
    "todo",
    "nodejs",
    "express",
    "devops",
    "ci-cd"
  ],
  "author": "DevOps Intern",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "redis": "^5.8.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
